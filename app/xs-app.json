{
	"welcomeFile": "/index.html",
	"authenticationMethod": "route",
	"logout": {
		"logoutEndpoint": "/do/logout",
		"logoutPage": "/"
	},	
	"routes": [
		{
			"source": "^/api/(.*)",
			"target": "/api/$1",
			"destination": "cap-backend",
			"csrfProtection": true,
			"authenticationType": "xsuaa"
		},
		{
			"source": "^/controller/(.*)",
			"target": "/controller/$1",
			"destination": "cap-backend",
			"csrfProtection": true,
			"authenticationType": "xsuaa"
		},
		{
			"source": "/(.*)",
			"localDir": "resources",
			"authenticationType": "xsuaa"
		}
	]
}